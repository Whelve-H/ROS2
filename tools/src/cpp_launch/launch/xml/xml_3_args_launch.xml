<launch>
    <!-- 需要启动 turtlesim_node 动态设置背景颜色 -->
    <!-- 声明参数 -->
    <arg name="bg_r" default="255"></arg>
    <arg name="bg_g" default="255"></arg>
    <arg name="bg_b" default="255"></arg>
    <!-- 调用函数 -->
    <node pkg="turtlesim" exec="turtlesim_node">
        <param name="background_r" value="$(var bg_r)"></param>
        <param name="background_g" value="$(var bg_g)"></param>
        <param name="background_b" value="$(var bg_b)"></param>
    </node>
    <!-- launch文件执行时动态传参 -->
</launch>