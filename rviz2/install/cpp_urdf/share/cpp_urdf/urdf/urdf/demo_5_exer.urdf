<!-- 
需求:创建一个四轮机器人
参数:长0.2m,宽0.12m,高0.07m,轮胎半径0.025,宽度0.02, 离地间距0.015
步骤:1.设置base_footprint_link
2.设置base_link
3.使用joint关联二者关系
4.设置wheel_link
5.使用joint关联base_link和wheel_link
6.将四个轮子关联到base_link   
-->
<robot name="my_car">
    <material name="yellow">
        <color rgba="0.8 0.8 0.2 0.8"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.0 0.0 0.8"/>
    </material>
    <link name="base_footprint_link">
        <visual>
            <geometry>
                <sphere radius="0.0001"/>
            </geometry>
        </visual>
    </link>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.12 0.07"/>
            </geometry>
            <material name="yellow"/>
        </visual>
    </link>

    <joint name="base_footprint_link_base_link" type="fixed">
        <parent link="base_footprint_link"/>
        <child link="base_link"/>
        <!-- 偏移量为 高度/2+偏移量 0.015-->
        <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
    </joint>
    <link name="left_front_wheel">
        <visual>
            <geometry>s
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <material name="red"/>
        </visual>
    </link>
    <joint name="left_front_wheel_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.065 0.07 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>
    <link name="right_front_wheel">
        <visual>
            <geometry>s
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <material name="red"/>
        </visual>
    </link>
    <joint name="right_front_wheel_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.065 -0.07 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>s
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <material name="red"/>
        </visual>
    </link>
    <joint name="left_back_wheel_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.065 0.07 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>
    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <material name="red"/>
        </visual>
    </link>
    <joint name="right_back_wheel_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="-0.065 -0.07 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>
</robot>